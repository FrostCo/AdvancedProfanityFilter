{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "lib": ["es2017", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@APF/*": ["src/script/*"],
      "@ROOT/*": ["./*"],
      "@VENDOR/*": ["src/script/vendor/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "./src/script/**/*.ts"
  ]
}
